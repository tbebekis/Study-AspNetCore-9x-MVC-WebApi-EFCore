{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        },
        "File": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft": "Error"
            },
            "MaxSizeInKiloBytes": 2048,
            "RetainPolicyInDays": 7,
            "Folder": "BIN_PATH\\Logs",
            "FileName": "Log.log"
        },
        "Database": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft": "Error"
            },
            "RetainPolicyInDays": 7
        }
    },
    "AllowedHosts": "*",
    "AppSettings": {
        "UseAuthentication": true,
        "Theme": "Default",
        "SessionTimeoutMinutes": 30,

        "Defaults": {
            "CurrencyCode": "EUR",
            "CurrencySymbol": "€",
            "MoneyFormat": "€ 0.00",
            "CacheTimeoutMinutes": 15,
            "PageSize": 10,
            "CultureCode": "en-US",
            "SupportedCultures": [ "en-US", "el-GR" ]
        },

        "UserCookie": {
            "IsEssential": true,
            "HttpOnly": true,
            "SameSite": "Strict",
            "ExpirationHours": -1
        },

        "Http": {
            "StaticFilesCacheControl": "no-store,no-cache",
            "UserCookieExpirationHours": -1
        },

        "HSTS": {
            "MaxAgeHours": 8680,
            "Preload": true,
            "IncludeSubDomains": true,
            "ExcludedHosts": [
                "example.com",
                "www.example.com"
            ]
        },
        "Seo": {
            "DefaultMetaTitle": "MvcApp",
            "DefaultMetaDescription": "",
            "DefaultMetaKeywords": "",
            "TitleSeparator": " | ",
            "AppendDefaultMetaTitle": true
        }
    }
}
